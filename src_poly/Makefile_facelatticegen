LIBS		= -lm $(GMP_CXX_LINK) -pthread $(LIBBLISS_LINK) $(GLPK_LINK) $(NAUTY_LINK) $(CDDLIB_GMP_LINK) $(BOOST_LINK)

%.o: %.cpp
	@echo
	@echo compile $<
	$(CC) $(OUTPUTFLAG) $@ $(CTOTAL) $(NOLINKFLAG) $<

all:	$(PROGRAM)

$(PROGRAM): 	$(OBJECTS)
		@echo
		@echo link $@
		$(CC) $(LINKOBJECTS) $(DEBUGFLAG) $@.o $(LIBS) -o $@

clean:;
	rm -f *.o
	rm -f $(PROGRAM)
