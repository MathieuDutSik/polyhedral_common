CFLAGS 		= -I$(GMP_INCDIR) -I$(EIGEN_PATH) $(NAUTY_INCLUDE)

CTOTAL          = $(CLOCAL) $(CFLAGS) $(CHASHMAP) $(COPTIONS)
LIBS		= -lm $(GMP_CXX_LINK) -pthread $(NAUTY_LINK) $(MPI_LINK_CPP)

%.o: %.cpp
	@echo
	@echo compile $<
	$(CC) $(OUTPUTFLAG) $@ $(CTOTAL) $(NOLINKFLAG) $<

all:	$(PROGRAM)

$(PROGRAM): 	$(OBJECTS)
		@echo
		@echo link $@
		$(CC) $(DEBUGFLAG) $@.o $(LIBS) -o $@

clean:;
	rm -f *.o
	rm -f $(PROGRAM)
