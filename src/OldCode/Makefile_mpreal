SRCFILES	= mpreal.cpp

PROGRAM		= example \
                  StandaloneHilbertMatrix

OBJECTS		= $(SRCFILES:.cpp=.o) \
		  $(PROGRAM:%=%.o)

LINKOBJECTS	= $(SRCFILES:.cpp=.o)

CC		= g++ -Wall -g

NOLINKFLAG 	= -c
OUTPUTFLAG 	= -o

CFLAGS 		= -Wall -ansi

LIBS		= -lm -lmpfr

%.o: %.cpp
	@echo
	@echo compile $<
	$(CC) $(OUTPUTFLAG) $@ $(CFLAGS) $(NOLINKFLAG) $<

all:	$(PROGRAM)

$(PROGRAM): 	$(OBJECTS)
		@echo
		@echo link $@
		$(CC) $(LINKOBJECTS) $(DEBUGFLAG) $@.o $(LIBS) -o $@

clean:;
	rm -f *.o
	rm -f $(PROGRAM)

