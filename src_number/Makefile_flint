PROGRAM		= TestFlint

OBJECTS		= $(PROGRAM:%=%.o)

CC		= g++ -std=c++11

NOLINKFLAG 	= -c
OUTPUTFLAG 	= -o

CFLAGS 		= -Wall -g -I$(PERMLIB_INCDIR) -I$(LIBBLISS_INCDIR) -I$(LIBSHORT_INCDIR) -I$(BOOST_INCDIR) -I$(EIGEN_PATH) -I$(MPFR_INCDIR) -I$(FLINT_INCDIR)

LIBS		= -lm -lgmp -lgmpxx -pthread $(LIBSHORT_LINK) $(LIBBLISS_LINK) $(FLINT_LINK)

%.o: %.cpp
	@echo
	@echo compile $<
	$(CC) $(OUTPUTFLAG) $@ $(CFLAGS) $(NOLINKFLAG) $<

all:	$(PROGRAM)

$(PROGRAM): 	$(OBJECTS)
		@echo
		@echo link $@
		$(CC) $(DEBUGFLAG) $@.o $(LIBS) -o $@

clean:;
	rm -f *.o
	rm -f $(PROGRAM)
